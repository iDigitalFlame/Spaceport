args="$*"
install=$(echo "$args" | grep -qE '\-S\s|-U\s'; echo $?)

if [ "$install" -eq 0 ]; then
    mount -o remount,rw /
fi

sg firewall-web "/usr/bin/pacman $args"
ret=$?

if [ "$install" -eq 0 ] && [ -z "$SYSBATCH" ]; then
    mount -ro remount,ro / 2> /dev/null || mount -Rro remount,ro /
fi

exit $ret
