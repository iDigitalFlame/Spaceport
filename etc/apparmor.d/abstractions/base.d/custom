/etc/timezone                   r,
/etc/gnutls/config              r,

/var/cache/ld.so.cache          rm,

audit deny /opt/secureboot/{,*} rw,

deny ptrace (readby, tracedby),

signal receive   peer=unconfined set=(hup int quit kill segv pipe term cont stop),
signal           peer=@{profile_name},

deny signal send peer=unconfined,
