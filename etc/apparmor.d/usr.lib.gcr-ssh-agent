include <tunables/spaceport>

profile gcr-ssh-agent /usr/lib/gcr-ssh-agent {
    include <abstractions/base>

    /usr/lib/gcr-ssh-agent            rm,

    owner @{HOME}/.config/ssh{,/,/*}  r,

    owner @{run}/user/@{uid}/gcr{,/*} rw,

    /usr/bin/ssh-agent                Pxr -> ssh-agent,

    signal (receive) set=(cont, term) peer=unconfined,

    deny network,

    include if exists <local/usr.lib.gcr-ssh-agent>
}
