#!/usr/bin/false
# System Management Daemon - Spaceport
# iDigitalFlame
#
# Find files created by Pacman update Pacman Hook.

[Trigger]
Type        = Package
Target      = *
Operation   = Upgrade

[Action]
Description = Looking for *.pac* files..
When        = PostTransaction
Exec        = /usr/bin/bash -c "find /etc/ -type f -name *.pac* -ls"
