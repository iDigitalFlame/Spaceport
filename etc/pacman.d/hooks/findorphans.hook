#!/usr/bin/false
# System Management Daemon - Spaceport
# iDigitalFlame
#
# Find Orphans Pacman Hook.

[Trigger]
Type        = Package
Target      = *
Operation   = Remove
Operation   = Upgrade

[Action]
Description = Finding orphan packages..
When        = PostTransaction
Exec        = /usr/bin/bash -c "pacman -Qtdq || echo 'No orphans found.'"
