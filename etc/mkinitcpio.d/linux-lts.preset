ALL_kver="/boot/vmlinuz-linux-lts"

PRESETS=("default" "fallback")

default_uki="/boot/EFI/Linux/$(hostname)-lts.efi"
default_options="--splash /usr/lib/smd/assets/boot-logo.bmp"

fallback_uki="/boot/EFI/Linux/$(hostname)-lts-fallback.efi"
fallback_options="-S autodetect --splash /usr/lib/smd/assets/boot-logo.bmp"
